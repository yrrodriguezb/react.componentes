{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types",
    ],
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
    "types",
    "tests",
    "src/**/*.json",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020",
      "noUnusedLocals": true,
      "noUnusedParameters": true
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
